generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Arma {
  id   String @id @default(uuid()) @db.Uuid
  nome String @db.VarChar(50)

  createdAt DateTime @default(now()) @db.Date()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date()
  Crime     Crime[]

  @@map("armas")
}

model Crime {
  id        String @id @default(uuid()) @db.Uuid
  descricao String
  arma      Arma   @relation(fields: [armaId], references: [id])
  armaId    String @map("arma_id") @db.Uuid

  createdAt DateTime @default(now()) @db.Date()
  updatedAt DateTime @updatedAt @map("updated_at") @db.Date()

  @@map("crimes")
}
